@model ResumeCreation.Models.Applicant

@{
    ViewData["Title"] = "Details";
}

@*<h1>Create</h1>

<h4>Applicant</h4>
<hr />*@

<div class="col-11 mx-auto pt-0 p-0">
    <div class="card">
        <div class="card-header bg-success text-uppercase text-white" style="height:45px;">
            <h4>View Applicant</h4>
        </div>
        <form ID="ApplicantForm" enctype="multipart/form-data" asp-action="Details">

            <div class="container-fluid btn-group">
                <div class="col-8">
            <div class="row">
                <div class="col-md-6">
                  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                  <div class="form-group">
                       <label asp-for="Name" class="control-label"></label>
                       <input asp-for="Name" class="form-control-plaintext" readonly/>

                  </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                      <label asp-for="Gender" class="control-label"></label>
                      <input asp-for="Gender" class="form-control-plaintext" readonly />
                     
                    </div>
                </div>
                <div class="col-md-6">
                     <div class="form-group">
                       <label asp-for="Age" class="control-label"></label>
                       <input asp-for="Age" class="form-control-plaintext" readonly />
                     
                     </div>
                </div>
                <div class="col-md-6">
                     <div class="form-group">
                       <label asp-for="Qualification" class="control-label"></label>
                       <input asp-for="Qualification" class="form-control-plaintext" readonly />
                      
                     </div>
                </div>
                <div class="col-md-6">
                     <div class="form-group">
                       <label asp-for="TotalExperience" class="control-label"></label>
                       <input asp-for="TotalExperience" class="form-control-plaintext" readonly />
                       
                     </div>
                </div>
                 
                <div class="col-md-6 btn-group">
                    <img src="~/images/@Model.PhotoUrl" class="img-fluid" />
                </div>
            
           <div class="col-md-12">
               <table id="ExpTable" class="table table-striped table-sm">
                    <thead>
                        <tr>
                           <th>
                             CompanyName
                           </th>
                           <th>
                             Designation
                           </th>
                           <th>
                             YearsWorked
                           </th>

                           <th></th>

                        </tr>
                    </thead>

                <tbody>
                    @*@foreach (var item in Model.Experiences)*@
                    @for (int i = 0; i < Model.Experiences.Count; i++)
                    {
                        <tr>
                            <td>
                               <input asp-for="@Model.Experiences[i].CompanyName" class="form-control-plaintext" readonly/>
                              @* @Html.EditorFor(x => x.Experiences[i].CompanyName, new {htmlAttributes = new {@class = "form-control"}}) *@
                            </td>
                            <td>
                                <input asp-for="@Model.Experiences[i].Designation" class="form-control-plaintext" readonly/>
                               @* @Html.EditorFor(x => x.Experiences[i].Designation, new {htmlAttributes = new {@class = "form-control"}}) *@
                            </td>
                            <td>
                                <input asp-for="@Model.Experiences[i].YearsWorked" class="form-control-plaintext" readonly/>
                                @*@Html.EditorFor(x => x.Experiences[i].YearsWorked, new {htmlAttributes = new {@class = "form-control"}})*@
                               
                            </td>

                            <td>
                              
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>

            <input type="hidden" id="hdnLastIndex" value="0" />

            <div class="col-12">
                <div class="col-6 form-group text-right p-2">
                    <a asp-action="Index" class="btn btn-secondary">&nbsp;Back&nbsp;</a>
                </div>
              
            </div>
            </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
